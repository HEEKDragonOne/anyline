<?xml version="1.0" encoding="UTF-8"?> 
<!-- 
多个相似的查询条件,可以合成一组<conditions>在<sql>中通过<condtion ref=?>引用
 -->
<sqls>
	<conditions id="gp"><!-- condition通过gp引用 -->
		<condition id="STORE_ID">
			AND M.STORE_ID = :STORE_ID
		</condition>
		<condition id="CREATE_START_DATE">
			AND DATE_FORMAT(M.CREATE_TIME,'%Y-%m-%d') &gt;= ?
		</condition>
		<condition id="CREATE_END_DATE">
			AND DATE_FORMAT(M.CREATE_TIME,'%Y-%m-%d') &lt;= ?
		</condition>
	</conditions>
	<!-- 订单统计 -->
	<sql id="SD_MCH_STORE_ORDER_STATISTICS1">
		<text>
			SELECT
				*
			FROM MM_STORE AS M
			WHERE M.SORT_ID = {STORE_SORT_ID}
		</text>
		<condition ref="gp"></condition><!-- 对应 id=gp -->
	</sql>
	
	<sql id="SD_MCH_STORE_ORDER_STATISTICS2">
		<text>
			SELECT
				*
			FROM MM_STORE AS M
			WHERE M.SORT_ID = {STORE_SORT_ID}
		</text>
		<condition ref="gp"></condition><!-- 对应 id=gp -->
	</sql>
</sqls>